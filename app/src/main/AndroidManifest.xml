<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.chatcamp.app">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="io.chatcamp.app.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="io.chatcamp.app.ListActivity"
            android:label="@string/title_activity_list" />
        <activity
            android:name="io.chatcamp.app.ChannelCreateActivity"
            android:label="@string/title_activity_channel_create"
            android:parentActivityName="io.chatcamp.app.ListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.chatcamp.app.ListActivity" />
        </activity>
        <activity
            android:name="io.chatcamp.app.ConversationActivity"
            android:label="@string/title_activity_conversation"
            android:parentActivityName="io.chatcamp.app.ListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.chatcamp.app.ListActivity" />
        </activity>
        <service
            android:name="io.chatcamp.app.ChatCampAppFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
        <service
            android:name="io.chatcamp.app.ChatCampAppFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>
    </application>

</manifest>